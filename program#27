public static double PI = 3.14159;
    public static void main(String[] args)
    {
        int select;
        double radius;
        double width;
        double height;
        double baseTriangule;
        
        Scanner keyboard = new Scanner(System.in);
        
        System.out.println("\tGeometry Calculator");
        System.out.println("1. Calculate the Area of a Circle");
        System.out.println("2. Calculate the Area of a Rectangle");
        System.out.println("3. Calculate the Area of a Triangule");
        System.out.println("4. Quit");
        
        select = keyboard.nextInt();
            switch (select) 
            {
                case 1:
                    System.out.println("Please enter the radius of the circle:");
                    radius = keyboard.nextDouble();
                    System.out.println("The are of the circle is: "+(PI  (radius  radius)));
                    break;
                case 2:
                    System.out.println("Please enter the width of the rectangle:");
                    width = keyboard.nextDouble();
                    System.out.println("Please enter the height of the rectangle:");
                    height = keyboard.nextDouble();                    
                    System.out.println("The are of the rectangle is: "+(width * height));
                    break;
                case 3:
                    System.out.println("Please enter the base of the triangule:");
                    baseTriangule = keyboard.nextDouble();
                    System.out.println("Please enter the height of the triangule:");
                    height = keyboard.nextDouble();
                    System.out.println("The are of the triangule is: "+(baseTriangule  (height  0.5)));
                    break;
                case 4:
                    System.out.println("The program ended successfully");
                    break;
                default:
                    System.out.println("Invalid choice.");                   
            }
    }
